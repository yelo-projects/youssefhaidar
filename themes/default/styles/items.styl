@import 'mixins';
@import 'variables';

.itemHead{
	//@extend .animated
	position:relative;
	width:100%;
	text-decoration:none;
	display:block;
	height:$itemClosedHeight + $mainMargin;
	transition(all,1s,0);
	outline:none;
	padding:$mainMargin 0 $mainMargin 0;
	&:visited{
		color:$linksColor;
	}
	&:hover{
		text-decoration:none;
		transition(all,0.3s,0);
		background:$mainColor;
		color:$backColor;
		&:visited{color:$backColor;}
	}
	&:active,&:focus{
		outline:none;
	}
}

.item, .groupHeader{
	//background:$backColor;
	width:100%;
	height:$itemClosedHeight;
	overflow:hidden;
	border-bottom:1px solid $mainColor;
	transition(height,0.3s,0);
	position:relative;
	padding-bottom:$mainMargin;
	float:left;
	clear:both;
}

.groupHeader{
	height:30px;
	line-height:30px;
	font-size:30px;
	margin-top:20px;
	color:#999;
}

.item{
	.itemBody{
		position:relative;
		width:100%;
	}
	a.close{
		display:block;
		width:$closeIconSize;
		height:$closeIconSize;
		position:absolute;
		top:- $closeIconSize;
		right:0;
		font-weight:bold;
		font-size:$closeIconSize;
		line-height:$closeIconSize;
		text-align:center;
		overflow:hidden;
		background:url(../images/close.png) 50% 50%;
		text-indent:-9999px;
		@extend .noOutline;
		&:hover{
			background:url(../images/close-hover.png);
		}
	}
	.Date{
		display:block;
		font-size:120%;
		line-height:120%;
		width:$sideColumnWidth;
		float:left;
	}
	.Title{
		display:block;
		width:$middleColumnWidth;
		float:left;
		font-size:120%;
		line-height:120%;
	}
	.Category{
		display:block;
		float:right;
		font-size:120%;
		line-height:120%;
	}
	&.current{
		height:$itemOpenHeight;
		.Title{
			font-size:220%;
			position:absolute;
			display:block;
			top:$mainMargin * 5;
			left:0px;

		}
		.Category{
			display:none;
		}
		a.close{
			top:5px;
		}
		.itemHead{
			height:80px;
			&:hover{
				background:$backColor;
				color:$mainColor;
				&:visited{color:$mainColor;}
			}
		}

	}
	&.data-filter-date .itemHead{
		.Date{display:none;}
	}
	&.data-filter-category .itemHead{
		.Category{display:none;}
	}
	&.article{
		height:$itemArticleHeight;
		&.current{
			height:$itemArticleHeightOpen;
		}
	}
}



.Images{
	width:100%;
	height:$imagesHeight + $mainMargin + $imagesThumbnailSize + ($imagesThumbnailsBorderWidth * 2);
	clear:both;
	.ImagesContainer{
		width:100%;
		height:$imagesHeight;
		overflow:hidden;
		transition(all,1s,0);
		position:relative;
	}
	.ImagesRow{
		display:block;
		width:7000px;
		transition(all,1s,0);
		margin-bottom:$mainMargin;
		position:absolute;
		top:0;
		left:$imagesMargin;
		.Image{
			padding-right:$mainMargin;
			background-position:50% 50%;
			background-image:url(../images/loading.gif);
			background-repeat:no-repeat;
		}
		.Image,.image-placeholder{
			height:$imagesHeight;
			min-width:100px;
			display:table-cell;
			&:last-child,&.last{padding-right:0;}
		}
	}
	.ImagesThumbnails{
		width:100%;
		height:$imagesThumbnailSize + ($imagesThumbnailsBorderWidth * 2);
		clear:both;
		margin-top:$mainMargin;
		a{
			display:table-cell;
			float:left;
			outline:none;
			vertical-align:middle;
			width:$imagesThumbnailSize;
			height:$imagesThumbnailSize;
			overflow:hidden;
			margin-right:$mainMargin;
			border:$imagesThumbnailsBorderWidth solid transparent;
			transition(all,1s,0);
			&:active,&.current{
				border-color:$imagesThumbnailsBorderColor;
				outline:none;
			}
			&:last-child,&.last{clear:right;}
			img{
				vertical-align:middle;
			}
			&.inactive{
				background-color:#999;
				cursor:default;
				img{
					opacity:.5;
				}
			}
		}
	}

}

.info{
	width:180px;
	float:left;
	.title,.value{
		float:left;
		clear:both;
		font-size:75%;
		letter-spacing:1px;
	}
	.title{
		letter-spacing:2px;
		font-weight:bold;
		text-transform:lowercase;
	}
	>div{
		margin-top:($mainMargin / 2);
		&:first-child{
			margin-top:$mainMargin;
		}
	}
}



.item.link{	
	height:$itemLinkHeight;
	&:target{
		height:$itemLinkHeight;
	}
	.itemHead{
		height:$itemLinkHeight;		
		display:table-cell;
		vertical-align:bottom;
		&:hover{
			background:$backColor;
			color:$mainColor;
		}
	}
	.Title{font-size:180%;}
	.URL{
		position:absolute;
		display:table;
		right:0;
		top:0;
		height:$itemLinkHeight;
		width:($websiteWidth / 3 )*2;
		a{
			display:table-cell;
			vertical-align:bottom;
			&:hover{
				text-decoration:underline;
			}
		}
	}
	.full-url{
		font-size:120%;
	}
}

.articleImage{
	width:100%;
	position:relative;
	display:block;
	margin:0 auto;
	vertical-align:middle;
	text-align:center;
	.Image{
		position:relative;
		margin:0 auto;
		height:350px;
		min-width:350px;
		display:inline-block;
	}
	.Image,img{
		margin: 0 auto;
	}
	.Description{
		transition(all,1s,0);
		margin:0 auto;
		background:rgba(0,0,0,.4);
		color:#fdfdfd;
		font-size:50px;
		margin-top:100px
		display:block;
		padding:50px;
		position:relative;
		top:-350px;
		opacity:.3;
	}

	.Image:hover{
		.Description{
			opacity:1;
		}
	}
}
.article{
	.itemHead .Title{
		top:0;
	}
	.Document{
		position:absolute;
		bottom:0;
		right:0;
		background:#999;
		color:#fdfdfd;
		text-decoration:underline;
		padding:4px;
		font-size:12px;
		&:hover{
			background:#990000;
			text-decoration:none;
		}
	}
}
